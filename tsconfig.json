{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es6", "dom"],
    // "allowJs": true,
    // "checkJs": true,
    // "jsx": "preserve",
    "declaration": true,
    "sourceRoot": "./src",
    "sourceMap": true,
    // "outFile": "./dist/ddBuilder.js",
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": false,
    // "noEmit": true,
    "noEmitOnError": true,
    // "importHelpers": true,
    // "downlevelIteration": true,
    // "isolatedModules": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    // "alwaysStrict": true,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    // "noImplicitReturns": true,
    // "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "*": [
        "*",
        "node_modules/*",
        "dist/*",
        "config/*"
      ]
    },
    // "rootDirs": [],
    // "typeRoots": [],
    "types": [
      "chai",
      "chalk",
      "commander",
      "electron",
      "js-yaml",
      "jsonpath",
      "log4js",
      "mocha",
      "node",
      "ramda"
    ],
    // "allowSyntheticDefaultImports": true,
    // "mapRoot": "./",
    // "inlineSourceMap": true,
    // "inlineSources": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}
